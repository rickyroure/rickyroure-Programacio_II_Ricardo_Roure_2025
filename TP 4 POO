
package sistema_gestion_empleados;

public class Empleado {
    private int id_empleado;
    private String nombre;
    private String puesto;
    private double salario;
    private static int totalEmpleados = 0;

    public Empleado(int id_empleado, String nombre, String puesto, double salario) {
        setNombre(nombre);
        setPuesto(puesto);
        this.salario = salario;
        Empleado.totalEmpleados++;
        setId_empleado(id_empleado);
    }

    public Empleado(String nombre, String puesto) {
        this((Empleado.totalEmpleados + 1), nombre, puesto, 5000.00);
    } 
    
    public int getId_empleado() {
        return id_empleado;
    }

    public void setId_empleado(int id_empleado) {
        if (id_empleado == Empleado.totalEmpleados){
            this.id_empleado = id_empleado;
        }else {
            System.out.println("El Id_empleado  ingresado es incorrecto. "
                        + "Se asigna Id automaticamente");
            this.id_empleado = Empleado.totalEmpleados;
        }
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        if (nombre == null || nombre.isBlank()){
            throw new IllegalArgumentException("El nombre del empleado "
                        + "es obligatorio");
        } else{
            this.nombre = nombre;
        }
    }
    
    public String getPuesto(){
        return puesto;
    }

    public void setPuesto(String puesto) {
        if (puesto != null){
           this.puesto = puesto;
        }
    }    
    
    public double getSalario() {
        return salario;
    }

    public void setSalario(double salario) {
        this.salario = salario;
    }

    public static int getTotalEmpleados() {
        return totalEmpleados;
    }
    
    public static void mostrarTotalEmpleados(){
        System.out.println("Total de empleados: " + Empleado.getTotalEmpleados());
    }

     
    @Override
    public String toString() {
        return "Empleado{" + "id_empleado=" + id_empleado + ", nombre=" + nombre + 
                    ", puesto=" + puesto + ", salario=" + salario + '}';
    }
       
    public void actualizarSalario(double porcentaje){
        if (porcentaje <= 0) {  
          throw new IllegalArgumentException("El porcentaje de aumento "
                      + "debe ser positivo.");
    }    
        double nuevosalario = this.salario * (1+ (porcentaje/100)); 
        this.setSalario(nuevosalario);
    }
    
    public void actualizarSalario(int sumafija){
        if (sumafija <= 0) {  
          throw new IllegalArgumentException("El aumento debe ser positivo.");
    }    
        double nuevosalario = this.salario + sumafija; 
        this.setSalario(nuevosalario);
    }
}
