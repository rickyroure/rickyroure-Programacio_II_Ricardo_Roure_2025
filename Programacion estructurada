12)
package programacion_estructurada;

public class Programacion_Estructurada {

    public static void main(String[] args) {
        double[] precios = {199.99, 299.5, 149.75, 399.0, 89.99};
        
        System.out.println("Precios originales:");
        for (int i = 0; i < precios.length; i++) {
            System.out.println("Precio: $" + precios[i]);
        }
        
        precios[2] = 129.99; // Modificar tercer precio
        
        System.out.println("Precios modificados:");
        for (int i = 0; i < precios.length; i++) {
            System.out.println("Precio: $" + precios[i]);
        }
    }
    
}
------------------------------------------------------------------------------------------------
13)
package programacion_estructurada;

public class Programacion_Estructurada {
    public static void imprimirPrecios(double[] precios, int indice) {
        if (indice >= precios.length) {
            return;
        }
        System.out.println("Precio: $" + precios[indice]);
        imprimirPrecios(precios, indice + 1);
    }

    public static void main(String[] args) {
        double[] precios = {199.99, 299.5, 149.75, 399.0, 89.99};
        
        System.out.println("Precios originales:");
        imprimirPrecios(precios, 0);
        
        precios[2] = 129.99; // Modificar tercer precio
        
        System.out.println("Precios modificados:");
        imprimirPrecios(precios, 0);
    }
    
}



























































