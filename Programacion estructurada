10)
package programacion_estructurada;

import java.util.Scanner;

public class Programacion_Estructurada {
    public static int actualizarStock(int actual, int vendido, int recibido) {
        return actual - vendido + recibido;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Ingrese el stock actual del producto: ");
        int actual = sc.nextInt();
        System.out.print("Ingrese la cantidad vendida: ");
        int vendido = sc.nextInt();
        System.out.print("Ingrese la cantidad recibida: ");
        int recibido = sc.nextInt();
        
        int nuevoStock = actualizarStock(actual, vendido, recibido);
        System.out.println("El nuevo stock del producto es: " + nuevoStock);
        sc.close();
    }
    
}
